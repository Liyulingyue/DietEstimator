FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY Frontend/package*.json ./

# Install dependencies
RUN npm ci

# Don't copy source code - it will be mounted via volume
# COPY Frontend/ .

# Expose port
EXPOSE 5176

# Start development server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5176"]