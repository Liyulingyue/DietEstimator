# AI Backend Development Dockerfile
FROM python:3.10-slim

WORKDIR /app

# Copy requirements first for better caching
COPY AIBackend/requirements.txt ./

# Install dependencies with Tsinghua mirror
RUN pip install --no-cache-dir --upgrade pip -i https://pypi.tuna.tsinghua.edu.cn/simple \
    && pip install --no-cache-dir -r requirements.txt -i https://pypi.tuna.tsinghua.edu.cn/simple \
    && pip install --no-cache-dir python-dotenv -i https://pypi.tuna.tsinghua.edu.cn/simple

# Expose port
EXPOSE 8001

# Start command (will be overridden by volume mount in dev)
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8001", "--reload"]